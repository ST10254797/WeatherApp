<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather App" Height="400" Width="450">
    <Grid Background="{DynamicResource BackgroundBrush}" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Theme Toggle Button -->
        <ToggleButton Name="ThemeToggleButton" Content="Toggle Theme" Grid.Row="0" HorizontalAlignment="Left" Margin="5" Width="120" Height="30" Click="ThemeToggleButton_Click" />

        <!-- Unit Toggle Button -->
        <ToggleButton x:Name="UnitToggleButton" Content="°C" Grid.Row="0" HorizontalAlignment="Right" Margin="5" Width="50" Height="30" Click="UnitToggleButton_Click" />

        <!-- City Input -->
        <TextBlock Text="Enter City Name:" FontSize="16" Grid.Row="1" Margin="5" />
        <TextBox x:Name="CityTextBox" Grid.Row="1" FontSize="14" Margin="5" />

        <!-- Get Weather Button -->
        <Button Content="Get Weather" Grid.Row="1" HorizontalAlignment="Right" Margin="5" Width="100" Click="GetWeatherButton_Click" />

        <!-- Weather Icon -->
        <Image x:Name="WeatherIcon" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Height="100" Margin="5" />

        <!-- Weather Information -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock x:Name="CityNameText" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" />
            <TextBlock x:Name="TemperatureText" FontSize="16" Foreground="{DynamicResource TextBrush}" />
            <TextBlock x:Name="HumidityText" FontSize="16" Foreground="{DynamicResource TextBrush}" />
            <TextBlock x:Name="DescriptionText" FontSize="16" Foreground="{DynamicResource TextBrush}" />
            <TextBlock x:Name="WindSpeedText" FontSize="16" Foreground="{DynamicResource TextBrush}" />
            <TextBlock x:Name="WindDirectionText" FontSize="16" Foreground="{DynamicResource TextBrush}" />
            <TextBlock x:Name="VisibilityText" FontSize="16" Foreground="{DynamicResource TextBrush}" />
            <TextBlock x:Name="PressureText" FontSize="16" Foreground="{DynamicResource TextBrush}" />

            <!-- Weather Alerts -->
            <TextBlock x:Name="AlertsText" Text="Weather Alerts will be displayed here" Margin="10" Foreground="Red" />
        </StackPanel>
    </Grid>
</Window>
