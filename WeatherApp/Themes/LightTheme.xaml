<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light theme resources -->
    <Color x:Key="PrimaryBackgroundColor">White</Color>
    <Color x:Key="PrimaryTextColor">Black</Color>

    <!-- SolidColorBrushes for styling -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource PrimaryBackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource PrimaryTextColor}" />

    <!-- Add other styles as needed -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>
</ResourceDictionary>
